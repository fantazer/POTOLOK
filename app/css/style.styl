@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $snow
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $snow
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $snow
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(4px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 25px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 10px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black

// drop === end

// header
//.head
//.head-top
//.main-cont
.header
	padding: 20px 0
	f()
	align-items: center
.header-logo
	margin-right: 5%
	max-width 150px
.header-location
	margin-right: 5%
	f()
	align-items center
	font-weight: 700
	.icon
		size 18px
		margin-right: 5px
		fill $mark
.header-contact
	flex(mid)
	cp()
	margin-right: 3%
.header-contact__icon
	margin-right: 10px
	flex(mid)
	.icon
		size 16px
		fill $mark
.header-contact__text
	font-size: 12px
	opacity: .7
.header-phone
	margin-left: auto
	@extend .type--md
	@extend .type--bold
.header-contact-wrap
	f()
	align-items: center
//.nav

.head-top-wrap
	background: $snow
	padding: 5px 0
.menu
	padding: 10px 0 10px 10px
	f()
	justify-content: space-between
	align-items: center
	width calc(100% - 200px)
.menu__el
	color black
	tr(all)
	padding: 10px 15px
	&:hover
		opacity: 1

.header-lk
	flex(mid)
	margin-left: 2%
	padding: 0 20px
.header-lk__icon
	margin-right: 10px
	.icon
		size 20px
		fill $mark
.header-lk__text
	font-size: 12px
	opacity: .6
.header-lk__log
	font-weight: 700

.nav
	background: white
	border-top 1px solid $border-color

.nav-wrap
	f()
	align-items: stretch
.nav-cat
	flex(mid)
	padding:15px 0
	margin-right: 20px
.nav-cat__icon
	margin-right: 10px
	flex(mid)
	.icon
		fill black
		size 18px
.nav-cat__text
	color black
	font-weight: 700
.search
	width: 35%
	margin:0 auto
	flex(mid)
	position: relative
	.input
		width: 100%
		padding: 10px 20px
		br(3px)

.search-get
	position: absolute
	right: 15px
	.icon
		size 15px


.cart
	flex(mid)
	margin-left: 1%
	padding: 0 20px
.cart__icon
	margin-right: 15px
	position: relative
	.icon
		size 32px
.cart-val
	position: absolute
	size 20px
	round()
	flex(mid)
	background: $mark
	top -5px
	right: -5px
	color white
	font-size: 10px

// header === end

.banner-wrap
	background: #fbfbfb
.banner
	min-height 600px
	f()
	align-items center
	position relative
.banner-info
	width: 50%
.banner-img
	position absolute
	right: 0
	bottom 0
	bg-full()
	padding: 23%
.banner-title
	font-size: 54px
	font-weight: 700
	color black
	line-height: 1.2
	margin-bottom: 30px


.banner-text
	color black
	margin-bottom: 30px
	line-height: 1.4